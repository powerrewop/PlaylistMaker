<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        style="@style/LinearLayoutStyle"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/iv_searchBack"
            android:layout_gravity="center"
            android:src="@drawable/back"
            style="@style/ImageViewStyle2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/button_search"
            android:textSize="@dimen/sp_22"
            android:layout_marginStart="@dimen/dp_20"
            android:fontFamily="@font/ys_display_medium"
            android:textFontWeight="500"
            style="@style/mySetTextColor"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal"
        android:paddingTop="12pt">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittextform"
            tools:ignore="UselessParent">

            <EditText
                android:id="@+id/inputEditText"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:backgroundTint="?attr/colorPrimary"

                android:drawableStart="@drawable/search"
                android:drawablePadding="10dp"
                android:drawableTint="?attr/colorPrimaryVariant"
                android:hint="@string/button_search"
                android:inputType="text"
                android:maxLength="15"
                android:maxLines="1"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textColorHint="?attr/colorPrimaryVariant"
                android:textSize="@dimen/sp_16"
                tools:ignore="Autofill,RtlSymmetry"
                android:fontFamily="@font/ys_display_regular"
                android:textFontWeight="400"/>

            <ImageView
                android:id="@+id/clearIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                app:tint="?attr/colorPrimaryVariant"
                android:visibility="gone"/>
    </LinearLayout>


    </LinearLayout>
</LinearLayout>
