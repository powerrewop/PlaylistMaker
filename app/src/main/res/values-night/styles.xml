<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/sp_22</item>
        <item name="cornerRadius">@dimen/dp_16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/dp_7</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="LinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>

    </style>

    <style name="TextViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:layout_marginStart">@dimen/dp_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="ImageViewStyle">
        <item name="android:layout_width">@dimen/dp_24</item>
        <item name="android:layout_height">@dimen/dp_24</item>
        <item name="android:scaleType">center</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:tint">@color/white</item>

    </style>

    <style name="ImageViewStyle2">
        <item name="android:layout_width">@dimen/dp_24</item>
        <item name="android:layout_height">@dimen/dp_24</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:tint">@color/white</item>

    </style>

    <style name="myBackgroundColor">
        <item name="android:background">@color/tx_color</item>
    </style>

    <style name="mySetBackColor">
        <item name="android:background">@color/tx_color</item>
    </style>

    <style name="mySetTextColor">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>